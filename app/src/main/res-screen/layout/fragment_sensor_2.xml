<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/accelerometer_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/calories_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/contact_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/distance_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/gyroscope_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/heartRate_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/pedometer_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/skinTemperature_card"
            layout="@layout/sensor_cardview" />

        <include
            android:id="@+id/uv_card"
            layout="@layout/sensor_cardview" />
    </LinearLayout>
</ScrollView>